        // Extract keywords from text
        function extractKeywords(text) {
            // Remove common words and punctuation
            const commonWords = ["the", "and", "a", "an", "in", "on", "at", "to", "for", "with", "by", "about", "like", "through", "over", "before", "after", "under", "above", "from", "of", "is", "are", "was", "were", "be", "been", "being", "have", "has", "had", "do", "does", "did", "can", "could", "will", "would", "shall", "should", "may", "might", "must"];
            
            // Clean the text and split into words
            const words = text.toLowerCase().replace(/[^\w\s]/g, '').split(/\s+/);
            
            // Filter out common words and short words
            const filteredWords = words.filter(word => 
                word.length > 3 && !commonWords.includes(word)
            );
            
            // Count word frequency
            const wordCount = {};
            filteredWords.forEach(word => {
                wordCount[word] = (wordCount[word] || 0) + 1;
            });
            
            // Sort by frequency
            const sortedWords = Object.entries(wordCount)
                .sort((a, b) => b[1] - a[1])
                .map(entry => entry[0]);
            
            // Return top keywords
            return sortedWords.slice(0, 5);
        }

        // Find synonyms for a word (simplified implementation)
        function findSynonyms(word) {
            const synonyms = {
                'good': ['great', 'excellent', 'superb', 'outstanding', 'exceptional'],
                'bad': ['poor', 'terrible', 'awful', 'subpar', 'disappointing'],
                'big': ['large', 'huge', 'enormous', 'substantial', 'massive'],
                'small': ['tiny', 'little', 'compact', 'miniature', 'petite'],
                'important': ['crucial', 'essential', 'vital', 'critical', 'significant'],
                'interesting': ['fascinating', 'intriguing', 'compelling', 'captivating', 'engaging'],
                'happy': ['joyful', 'delighted', 'pleased', 'content', 'ecstatic'],
                'sad': ['unhappy', 'depressed', 'melancholy', 'gloomy', 'sorrowful'],
                'fast': ['quick', 'rapid', 'swift', 'speedy', 'expeditious'],
                'slow': ['gradual', 'unhurried', 'leisurely', 'sluggish', 'plodding'],
                // Add more synonym groups as needed
            };
            
            return synonyms[word.toLowerCase()] || [word];
        }

        // Generate a single title with variations
        function generateTitle(template, keywords, settings) {
            const mainTopic = settings.manualTopic || (keywords.length > 0 ? keywords[0].toUpperCase() : 'TOPIC');
            const year = new Date().getFullYear();
            
            let title = template;
            
            // Replace TOPIC with main keyword
            title = title.replace(/TOPIC/g, mainTopic);
            
            // Replace YEAR
            if (settings.includeDate === 'always' || (settings.includeDate === 'sometimes' && Math.random() > 0.5)) {
                title = title.replace(/YEAR/g, year);
            } else {
                title = title.replace(/in YEAR/g, '').replace(/for YEAR/g, '').replace(/YEAR/g, '');
            }
            
            // Add numbers for listicles if template contains 'X'
            if (title.includes('X') && (settings.includeNumbers === 'always' || (settings.includeNumbers === 'sometimes' && Math.random() > 0.3))) {
                const numbers = [3, 5, 7, 10, 12, 15, 20, 25, 30];
                const number = numbers[Math.floor(Math.random() * numbers.length)];
                title = title.replace(/X/g, number);
            } else {
                title = title.replace(/X /g, '').replace(/X-/g, '');
            }
            
            // Clean up any double spaces
            title = title.replace(/\s+/g, ' ').trim();
            
            return title;
        }

        // Generate a batch of titles
        function generateTitleBatch(content, settings) {
            const keywords = extractKeywords(content);
            const titles = [];
            const batchSize = parseInt(settings.batchSize);
            
            // Select templates based on style and length
            let templates = [];
            
            if (settings.style === 'mixed') {
                // Get templates from all styles
                const styles = Object.keys(titleTemplates);
                for (let i = 0; i < batchSize; i++) {
                    const randomStyle = styles[Math.floor(Math.random() * styles.length)];
                    let length;
                    
                    if (settings.length === 'varied') {
                        const lengths = ['short', 'medium', 'long'];
                        length = lengths[Math.floor(Math.random() * lengths.length)];
                    } else {
                        length = settings.length;
                    }
                    
                    const styleTemplates = titleTemplates[randomStyle][length];
                    const randomTemplate = styleTemplates[Math.floor(Math.random() * styleTemplates.length)];
                    templates.push(randomTemplate);
                }
            } else {
                // Get templates from specific style
                if (settings.length === 'varied') {
                    const lengths = ['short', 'medium', 'long'];
                    for (let i = 0; i < batchSize; i++) {
                        const randomLength = lengths[Math.floor(Math.random() * lengths.length)];
                        const lengthTemplates = titleTemplates[settings.style][randomLength];
                        const randomTemplate = lengthTemplates[Math.floor(Math.random() * lengthTemplates.length)];
                        templates.push(randomTemplate);
                    }
                } else {
                    templates = [...titleTemplates[settings.style][settings.length]];
                    // Shuffle templates
                    templates.sort(() => Math.random() - 0.5);
                    templates = templates.slice(0, batchSize);
                }
            }
            
            // Generate titles using templates
            templates.forEach(template => {
                const title = generateTitle(template, keywords, settings);
                if (!titles.includes(title)) {
                    titles.push(title);
                }
            });
            
            // If we don't have enough titles (due to duplicates), generate more
            while (titles.length < batchSize) {
                // Get a random template
                let style, length;
                
                if (settings.style === 'mixed') {
                    const styles = Object.keys(titleTemplates);
                    style = styles[Math.floor(Math.random() * styles.length)];
                } else {
                    style = settings.style;
                }
                
                if (settings.length === 'varied') {
                    const lengths = ['short', 'medium', 'long'];
                    length = lengths[Math.floor(Math.random() * lengths.length)];
                } else {
                    length = settings.length;
                }
                
                const styleTemplates = titleTemplates[style][length];
                const randomTemplate = styleTemplates[Math.floor(Math.random() * styleTemplates.length)];
                
                const title = generateTitle(randomTemplate, keywords, settings);
                if (!titles.includes(title)) {
                    titles.push(title);
                }
            }
            
            return titles;
        }

        // Generate more creative title variations
        function generateCreativeVariations(title, count = 1) {
            const variations = [];
            const words = title.split(' ');
            
            for (let i = 0; i < count; i++) {
                // Select a random word to replace (skip very short words)
                const replaceable = words.filter(word => word.length > 4);
                if (replaceable.length === 0) continue;
                
                const index = words.indexOf(replaceable[Math.floor(Math.random() * replaceable.length)]);
                const word = words[index];
                
                // Find synonyms
                const synonyms = findSynonyms(word);
                const synonym = synonyms[Math.floor(Math.random() * synonyms.length)];
                
                // Create variation
                const variation = [...words];
                variation[index] = synonym;
                
                variations.push(variation.join(' '));
            }
            
            return variations;
        }

        // Initialize saved titles array
        let savedTitles = [];
        let generatedCount = 0;

        // Main function to generate titles
        function generateTitles() {
            const content = document.getElementById('content-input').value;
            const style = document.getElementById('title-style').value;
            const length = document.getElementById('title-length').value;
            const batchSize = document.getElementById('batch-size').value;
            const manualTopic = document.getElementById('manual-topic').value.trim();
            const includeNumbers = document.getElementById('include-numbers').value;
            const includeDate = document.getElementById('include-date').value;
            const emotionalTone = document.getElementById('emotional-tone').value;
            const structure = document.getElementById('title-structure').value;
            
            const outputArea = document.getElementById('output-area');
            const titlesContainer = document.getElementById('titles-container');
            const historyPanel = document.getElementById('history-panel');
            const titleCount = document.getElementById('title-count');
            
            // Show loading state
            const generateBtn = document.getElementById('generate-btn');
            const originalBtnContent = generateBtn.innerHTML;
            generateBtn.innerHTML = '<span class="button-content"><span class="loading"></span>Generating...</span>';
            generateBtn.disabled = true;
            
            // Check if content is provided
            if (!content || content.trim().length < 20) {
                alert('Please enter more content for better title suggestions (minimum 20 characters).');
                generateBtn.innerHTML = originalBtnContent;
                generateBtn.disabled = false;
                return;
            }
            
            // Generate titles after a short delay (to show loading state)
            setTimeout(() => {
                // Clear previous titles
                titlesContainer.innerHTML = '';
                
                // Generate titles based on settings
                const settings = {
                    style,
                    length,
                    batchSize,
                    manualTopic,
                    includeNumbers,
                    includeDate,
                    emotionalTone,
                    structure
                };
                
                const titles = generateTitleBatch(content, settings);
                
                // Add titles to container
                titles.forEach(title => {
                    generatedCount++;
                    
                    const titleElement = document.createElement('div');
                    titleElement.className = 'title-option fade-in';
                    
                    const titleText = document.createElement('h3');
                    titleText.textContent = title;
                    
                    const copyIndicator = document.createElement('span');
                    copyIndicator.className = 'copy-indicator';
                    copyIndicator.textContent = 'Copied!';
                    
                    titleElement.appendChild(titleText);
                    titleElement.appendChild(copyIndicator);
                    
                    // Add click to copy functionality
                    titleElement.addEventListener('click', () => {
                        navigator.clipboard.writeText(title)
                            .then(() => {
                                // Show feedback
                                copyIndicator.style.opacity = '1';
                                setTimeout(() => {
                                    copyIndicator.style.opacity = '0';
                                }, 1000);
                                
                                // Add to saved titles if not already there
                                if (!savedTitles.includes(title)) {
                                    savedTitles.push(title);
                                    updateHistoryPanel();
                                }
                            })
                            .catch(err => {
                                console.error('Failed to copy: ', err);
                            });
                    });
                    
                    titlesContainer.appendChild(titleElement);
                });
                
                // Update title count
                titleCount.textContent = `${generatedCount} titles generated`;
                
                // Show output area and history panel
                outputArea.style.display = 'block';
                historyPanel.style.display = savedTitles.length > 0 ? 'block' : 'none';
                
                // Reset button state
                generateBtn.innerHTML = originalBtnContent;
                generateBtn.disabled = false;
                
                // Enable other buttons
                document.getElementById('regenerate-btn').disabled = false;
                document.getElementById('more-btn').disabled = false;
            }, 500);
        }

        // Generate more titles
        function generateMoreTitles() {
            const content = document.getElementById('content-input').value;
            const style = document.getElementById('title-style').value;
            const length = document.getElementById('title-length').value;
            const batchSize = document.getElementById('batch-size').value;
            const manualTopic = document.getElementById('manual-topic').value.trim();
            const includeNumbers = document.getElementById('include-numbers').value;
            const includeDate = document.getElementById('include-date').value;
            const emotionalTone = document.getElementById('emotional-tone').value;
            const structure = document.getElementById('title-structure').value;
            
            const titlesContainer = document.getElementById('titles-container');
            const titleCount = document.getElementById('title-count');
            
            // Show loading state
            const moreBtn = document.getElementById('more-btn');
            const moreTitlesBtn = document.getElementById('more-titles-btn');
            const originalBtnContent = moreBtn.innerHTML;
            moreBtn.innerHTML = '<span class="button-content"><span class="loading"></span>Generating...</span>';
            moreBtn.disabled = true;
            moreTitlesBtn.disabled = true;
            
            // Generate titles after a short delay (to show loading state)
            setTimeout(() => {
                // Generate titles based on settings
                const settings = {
                    style,
                    length,
                    batchSize,
                    manualTopic,
                    includeNumbers,
                    includeDate,
                    emotionalTone,
                    structure
                };
                
                const titles = generateTitleBatch(content, settings);
                
                // Add titles to container
titles.forEach(title => {
    generatedCount++;
    
    const titleElement = document.createElement('div');
    titleElement.className = 'title-option fade-in';
    
    const titleText = document.createElement('h3');
    titleText.textContent = title;
    
    const copyIndicator = document.createElement('span');
    copyIndicator.className = 'copy-indicator';
    copyIndicator.textContent = 'Copied!';
    
    titleElement.appendChild(titleText);
    titleElement.appendChild(copyIndicator);
    
    // Add click to copy functionality
    titleElement.addEventListener('click', () => {
        navigator.clipboard.writeText(title)
            .then(() => {
                // Show feedback
                copyIndicator.style.opacity = '1';
                setTimeout(() => {
                    copyIndicator.style.opacity = '0';
                }, 1000);
                
                // Add to saved titles if not already there
                if (!savedTitles.includes(title)) {
                    savedTitles.push(title);
                    updateHistoryPanel();
                }
            })
            .catch(err => {
                console.error('Failed to copy: ', err);
            });
    });
    
    titlesContainer.appendChild(titleElement);
});

// Update title count
titleCount.textContent = `${generatedCount} titles generated`;

// Reset button state
moreBtn.innerHTML = originalBtnContent;
moreBtn.disabled = false;
moreTitlesBtn.disabled = false;
}, 500);
}

// Update history panel with saved titles
function updateHistoryPanel() {
    const historyContainer = document.getElementById('history-container');
    const historyPanel = document.getElementById('history-panel');
    
    // Clear previous history
    historyContainer.innerHTML = '';
    
    // Add saved titles to history
    savedTitles.forEach(title => {
        const titleElement = document.createElement('div');
        titleElement.className = 'history-title';
        titleElement.textContent = title;
        
        // Add click to copy functionality
        titleElement.addEventListener('click', () => {
            navigator.clipboard.writeText(title)
                .then(() => {
                    // Show feedback through temporary highlight
                    const originalBackground = titleElement.style.backgroundColor;
                    titleElement.style.backgroundColor = '#d4edda';
                    setTimeout(() => {
                        titleElement.style.backgroundColor = originalBackground;
                    }, 500);
                })
                .catch(err => {
                    console.error('Failed to copy: ', err);
                });
        });
        
        historyContainer.appendChild(titleElement);
    });
    
    // Show or hide history panel
    historyPanel.style.display = savedTitles.length > 0 ? 'block' : 'none';
}

// Clear history
function clearHistory() {
    savedTitles = [];
    updateHistoryPanel();
}

// Event listeners
document.addEventListener('DOMContentLoaded', () => {
    // Generate titles button
    document.getElementById('generate-btn').addEventListener('click', generateTitles);
    
    // Regenerate button
    document.getElementById('regenerate-btn').addEventListener('click', generateTitles);
    
    // More titles buttons
    document.getElementById('more-btn').addEventListener('click', generateMoreTitles);
    document.getElementById('more-titles-btn').addEventListener('click', generateMoreTitles);
    
    // Clear history button
    document.getElementById('clear-history').addEventListener('click', clearHistory);
    
    // Advanced options toggle
    document.getElementById('advanced-toggle').addEventListener('click', function() {
        const advancedOptions = document.getElementById('advanced-options');
        const isVisible = advancedOptions.style.display === 'block';
        
        advancedOptions.style.display = isVisible ? 'none' : 'block';
        this.textContent = isVisible ? 'Show Advanced Options â–¼' : 'Hide Advanced Options â–²';
    });
    
    // Generate titles when pressing Enter in the textarea
    document.getElementById('content-input').addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && e.ctrlKey) {
            e.preventDefault();
            generateTitles();
        }
    });
});
</script>
</body>
</html>
